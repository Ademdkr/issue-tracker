# Development Environment Variables
# This file is used for local development

# ============================================
# Backend Configuration
# ============================================

NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration
# ============================================
# Local PostgreSQL database (via docker-compose or local installation)
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/issue_tracker_db?schema=public

# ============================================
# JWT Configuration
# ============================================
# Development-only secrets (NOT for production!)

JWT_SECRET=dev-secret-key-only-for-local-development-min-32-chars
JWT_REFRESH_SECRET=dev-refresh-secret-key-only-for-local-development-min-32-chars

# Token Expiration Times (longer for development convenience)
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Frontend & CORS Configuration
# ============================================

# Frontend URL for local development
FRONTEND_URL=http://localhost:4200

# Allowed CORS Origins (comma-separated, permissive for dev)
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# ============================================
# Rate Limiting Configuration
# ============================================

# More permissive for development
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ============================================
# Docker-Compose PostgreSQL
# ============================================

POSTGRES_DB=issue_tracker_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@issuetracker.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ============================================
# Development Flags
# ============================================

# Enable debugging
DEBUG=true

# Log Level (error, warn, log, debug, verbose)
LOG_LEVEL=debug
