# Docker Environment Variables
# Copy this file to .env and adjust values for your environment

# Backend Configuration
NODE_ENV=production
PORT=3000

# PostgreSQL Configuration
POSTGRES_DB=issue_tracker_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-change-this

# Database Configuration
DATABASE_URL=postgresql://postgres:your-secure-postgres-password-change-this@postgres:5432/issue_tracker_db

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters-required
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-also-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=http://localhost

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:80

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# pgAdmin Configuration (Optional)
PGADMIN_DEFAULT_EMAIL=admin@issuetracker.com
PGADMIN_DEFAULT_PASSWORD=your-secure-pgadmin-password-change-this
