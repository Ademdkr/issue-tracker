{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Nx serve backend (inspect)",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "backend", "--inspect"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: Node 9229",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: dist backend (nach Build)",
      "program": "${workspaceFolder}/dist/apps/backend/main.js",
      "runtimeArgs": ["--inspect"],
      "cwd": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/dist/apps/backend/**/*.js"],
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "nx: build backend"
    }
  ]
}
