{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/backend"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "commands": [
          "cd apps/backend && webpack-cli --watch --node-env=development",
          "nodemon --watch dist/apps/backend --delay 1000ms dist/apps/backend/main.js"
        ],
        "parallel": true
      },
      "configurations": {
        "production": {
          "commands": ["node dist/apps/backend/main.js"],
          "parallel": false
        }
      }
    }
  }
}
