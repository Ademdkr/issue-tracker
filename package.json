{
  "name": "@issue-tracker/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nx run-many -t serve --projects=backend,frontend --parallel",
    "dev:backend": "nx serve backend",
    "dev:frontend": "nx serve frontend",
    "dev:db:start": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:db:stop": "docker-compose -f docker-compose.dev.yml down",
    "dev:db:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "prod:local": "docker-compose up --build",
    "prod:local:detached": "docker-compose up --build -d",
    "prod:local:down": "docker-compose down",
    "ci:lint": "nx affected -t lint --parallel=3",
    "ci:build": "nx affected -t build --parallel=3",
    "ci:check": "npm run ci:lint && npm run ci:build",
    "lint": "nx run-many -t lint --all",
    "lint:fix": "nx run-many -t lint --all --fix",
    "build": "nx run-many -t build --all --configuration=production",
    "build:backend": "nx build backend --configuration=production",
    "build:frontend": "nx build frontend --configuration=production",
    "test": "nx run-many -t test --all",
    "test:backend": "nx test backend",
    "test:frontend": "nx test frontend",
    "format": "prettier --write \"**/*.{ts,js,json,html,scss,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,scss,css,md}\"",
    "type-check": "tsc --project tsconfig.base.json --noEmit",
    "docker:build:backend": "docker build -f apps/backend/Dockerfile -t issue-tracker-backend .",
    "docker:build:frontend": "docker build -f apps/frontend/Dockerfile -t issue-tracker-frontend .",
    "docker:build:all": "npm run docker:build:backend && npm run docker:build:frontend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "prisma:generate": "npx prisma generate --schema=./apps/backend/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate deploy --schema=./apps/backend/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=./apps/backend/prisma/schema.prisma",
    "prisma:seed": "npx prisma db seed",
    "pre-commit": "npm run format && npm run lint:fix",
    "pre-push": "npm run format:check && npm run lint && npm run type-check && npm run build",
    "validate": "npm run pre-push"
  },
  "private": true,
  "prisma": {
    "seed": "ts-node apps/backend/prisma/seed.ts"
  },
  "dependencies": {
    "@angular/animations": "~20.3.0",
    "@angular/cdk": "^20.2.13",
    "@angular/common": "~20.3.0",
    "@angular/compiler": "~20.3.0",
    "@angular/core": "~20.3.0",
    "@angular/forms": "~20.3.0",
    "@angular/material": "^20.2.13",
    "@angular/platform-browser": "~20.3.0",
    "@angular/platform-browser-dynamic": "~20.3.0",
    "@angular/router": "~20.3.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.5.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "ng2-charts": "^8.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "prisma": "^5.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/core": "~20.3.0",
    "@angular-devkit/schematics": "~20.3.0",
    "@angular/build": "~20.3.0",
    "@angular/cli": "~20.3.0",
    "@angular/compiler-cli": "~20.3.0",
    "@angular/language-service": "~20.3.0",
    "@eslint/js": "^9.8.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@nestjs/schematics": "^11.0.0",
    "@nx/angular": "22.2.3",
    "@nx/eslint": "22.2.3",
    "@nx/eslint-plugin": "22.2.3",
    "@nx/js": "22.2.3",
    "@nx/nest": "22.2.3",
    "@nx/node": "22.2.3",
    "@nx/web": "22.2.3",
    "@nx/webpack": "22.2.3",
    "@nx/workspace": "22.2.3",
    "@schematics/angular": "~20.3.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "20.19.9",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/utils": "^8.40.0",
    "angular-eslint": "^20.3.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nodemon": "^3.1.11",
    "nx": "22.2.3",
    "prettier": "^2.6.2",
    "prisma-erd-generator": "^2.4.2",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "wait-on": "^9.0.3",
    "webpack-cli": "^5.1.4"
  }
}
